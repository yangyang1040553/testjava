<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.statistical.mapper.GamePoolChangeMapper">
    
    <resultMap type="GamePoolChange" id="GamePoolChangeResult">
        <result property="id"    column="id"    />
        <result property="usdtAmount"    column="usdt_amount"    />
        <result property="trxAmount"    column="trx_amount"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectGamePoolChangeVo">
        select id, usdt_amount, trx_amount, create_time from t_game_pool_change
    </sql>

    <select id="selectGamePoolChangeList" parameterType="GamePoolChange" resultMap="GamePoolChangeResult">
        <include refid="selectGamePoolChangeVo"/>
        <where>  
            <if test="usdtAmount != null  and usdtAmount != ''"> and usdt_amount = #{usdtAmount}</if>
            <if test="trxAmount != null  and trxAmount != ''"> and trx_amount = #{trxAmount}</if>
            <if test="createTime != null "> and create_time = #{createTime}</if>
        </where>
    </select>
    
    <select id="selectGamePoolChangeById" parameterType="Long" resultMap="GamePoolChangeResult">
        <include refid="selectGamePoolChangeVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertGamePoolChange" parameterType="GamePoolChange" useGeneratedKeys="true" keyProperty="id">
        insert into t_game_pool_change
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="usdtAmount != null">usdt_amount,</if>
            <if test="trxAmount != null">trx_amount,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="usdtAmount != null">#{usdtAmount},</if>
            <if test="trxAmount != null">#{trxAmount},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateGamePoolChange" parameterType="GamePoolChange">
        update t_game_pool_change
        <trim prefix="SET" suffixOverrides=",">
            <if test="usdtAmount != null">usdt_amount = #{usdtAmount},</if>
            <if test="trxAmount != null">trx_amount = #{trxAmount},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteGamePoolChangeById" parameterType="Long">
        delete from t_game_pool_change where id = #{id}
    </delete>

    <delete id="deleteGamePoolChangeByIds" parameterType="String">
        delete from t_game_pool_change where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>