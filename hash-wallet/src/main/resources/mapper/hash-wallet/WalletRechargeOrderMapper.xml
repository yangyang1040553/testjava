<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.wallet.mapper.WalletRechargeOrderMapper">

    <resultMap type="WalletRechargeOrder" id="WalletRechargeOrderResult">
        <result property="id" column="id"/>
        <result property="transactionNo" column="transaction_no"/>
        <result property="userId" column="user_id"/>
        <result property="walletType" column="wallet_type"/>
        <result property="paymentAddress" column="payment_address"/>
        <result property="collectionAddress" column="collection_address"/>
        <result property="amount" column="amount"/>
        <result property="payAmount" column="pay_amount"/>
        <result property="minerAmount" column="miner_amount"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="invitationCode" column="invitation_code"/>
        <result property="note" column="note"/>
        <result property="nickName" column="nick_name"/>
        <result property="frist_recharge" column="frist_recharge"/>

        <result property="pay_type" column="pay_type"/>
        <result property="scale" column="scale"/>
        <result property="source_amount" column="source_amount"/>

    </resultMap>

    <sql id="selectWalletRechargeOrderVo">
        SELECT id,
               transaction_no,
               user_id,
               wallet_type,
               payment_address,
               collection_address,
               amount,
               pay_amount,
               miner_amount,
               STATUS,
               create_time,
               update_time,
               invitation_code,
               nick_name,
               note,
               frist_recharge,
               pay_type,
               scale,
               source_amount
        FROM t_wallet_recharge_order

    </sql>

    <select id="selectWalletRechargeOrderList" parameterType="WalletRechargeOrder"
            resultMap="WalletRechargeOrderResult">
        <include refid="selectWalletRechargeOrderVo"/>
        <where>
            <if test="transactionNo != null  and transactionNo != ''">and transaction_no = #{transactionNo}</if>
            <if test="userId != null  and userId != ''">and user_id = #{userId}</if>
            <if test="walletType != null  and walletType != ''">and wallet_type = #{walletType}</if>
            <if test="status != null ">and status = #{status}</if>
            <if test="createTime != null ">and DATE_FORMAT(create_time, '%Y-%m-%d') =  DATE_FORMAT(#{createTime}, '%Y-%m-%d')</if>
            <if test="invitationCode != null and invitationCode!='' ">and invitation_code = #{invitationCode}</if>
            <if test="id != null and id !='' ">and id = #{id}</if>
        </where>
    </select>


    <select id="selectCurrDay" parameterType="String" resultMap="WalletRechargeOrderResult">
        SELECT SUM(pay_amount) as pay_amount, wallet_type
        FROM t_wallet_recharge_order
        WHERE status = 1
          and create_time BETWEEN CONCAT(CURDATE(), ' 00:00:00') and CONCAT(CURDATE(), ' 23:59:59')
        group by wallet_type
    </select>

    <select id="selectWalletRechargeOrderById" parameterType="String" resultMap="WalletRechargeOrderResult">
        <include refid="selectWalletRechargeOrderVo"/>
        where id = #{id}
    </select>

    <insert id="insertWalletRechargeOrder" parameterType="WalletRechargeOrder">
        insert into t_wallet_recharge_order
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="transactionNo != null">transaction_no,</if>
            <if test="userId != null">user_id,</if>
            <if test="walletType != null">wallet_type,</if>
            <if test="paymentAddress != null">payment_address,</if>
            <if test="collectionAddress != null">collection_address,</if>
            <if test="amount != null">amount,</if>
            <if test="payAmount != null">pay_amount,</if>
            <if test="minerAmount != null">miner_amount,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="transactionNo != null">#{transactionNo},</if>
            <if test="userId != null">#{userId},</if>
            <if test="walletType != null">#{walletType},</if>
            <if test="paymentAddress != null">#{paymentAddress},</if>
            <if test="collectionAddress != null">#{collectionAddress},</if>
            <if test="amount != null">#{amount},</if>
            <if test="payAmount != null">#{payAmount},</if>
            <if test="minerAmount != null">#{minerAmount},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateWalletRechargeOrder" parameterType="WalletRechargeOrder">
        update t_wallet_recharge_order
        <trim prefix="SET" suffixOverrides=",">
            <if test="transactionNo != null">transaction_no = #{transactionNo},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="walletType != null">wallet_type = #{walletType},</if>
            <if test="paymentAddress != null">payment_address = #{paymentAddress},</if>
            <if test="collectionAddress != null">collection_address = #{collectionAddress},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="payAmount != null">pay_amount = #{payAmount},</if>
            <if test="minerAmount != null">miner_amount = #{minerAmount},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteWalletRechargeOrderById" parameterType="String">
        delete
        from t_wallet_recharge_order
        where id = #{id}
    </delete>

    <delete id="deleteWalletRechargeOrderByIds" parameterType="String">
        delete from t_wallet_recharge_order where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>