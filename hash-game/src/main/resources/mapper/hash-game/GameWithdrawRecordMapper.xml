<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.game.mapper.GameWithdrawRecordMapper">

    <resultMap type="GameWithdrawRecord" id="GameWithdrawRecordResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="withdrawAmount"    column="withdraw_amount"    />
        <result property="walletType"    column="wallet_type"    />
        <result property="afterAmount"    column="after_amount"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectGameWithdrawRecordVo">
        select id, user_id, withdraw_amount, wallet_type, after_amount, status, create_time from t_game_withdraw_record
    </sql>

    <select id="selectGameWithdrawRecordList" parameterType="GameWithdrawRecord" resultMap="GameWithdrawRecordResult">
        <include refid="selectGameWithdrawRecordVo"/>
        <where>
            <if test="id != null  and id != ''"> and id = #{id}</if>
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
            <if test="withdrawAmount != null "> and withdraw_amount = #{withdrawAmount}</if>
            <if test="walletType != null  and walletType != ''"> and wallet_type = #{walletType}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="createTime != null "> and create_time  >= #{createTime}</if>
        </where>
    </select>

    <select id="selectGameWithdrawRecordById" parameterType="String" resultMap="GameWithdrawRecordResult">
        <include refid="selectGameWithdrawRecordVo"/>
        where id = #{id}
    </select>

    <insert id="insertGameWithdrawRecord" parameterType="GameWithdrawRecord">
        insert into t_game_withdraw_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="withdrawAmount != null">withdraw_amount,</if>
            <if test="walletType != null">wallet_type,</if>
            <if test="afterAmount != null">after_amount,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="withdrawAmount != null">#{withdrawAmount},</if>
            <if test="walletType != null">#{walletType},</if>
            <if test="afterAmount != null">#{afterAmount},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateGameWithdrawRecord" parameterType="GameWithdrawRecord">
        update t_game_withdraw_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="withdrawAmount != null">withdraw_amount = #{withdrawAmount},</if>
            <if test="walletType != null">wallet_type = #{walletType},</if>
            <if test="afterAmount != null">after_amount = #{afterAmount},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteGameWithdrawRecordById" parameterType="String">
        delete from t_game_withdraw_record where id = #{id}
    </delete>

    <delete id="deleteGameWithdrawRecordByIds" parameterType="String">
        delete from t_game_withdraw_record where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>