<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.hashuser.mapper.HashUserNoticeMapper">

    <resultMap type="HashUserNotice" id="HashUserNoticeResult">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="isOpen" column="open"/>
        <result property="finishTime" column="finish_time"/>
        <result property="createTime" column="create_time"/>
        <result property="createBy" column="create_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="isPop" column="is_pop"/>
        <result property="weight" column="weight"/>
    </resultMap>

    <sql id="selectHashUserNoticeVo">
        select id,
               title,
               content,
               open,
               finish_time,
               create_time,
               create_by,
               update_time,
               update_by,
               is_pop,
               weight
        from t_user_notice
    </sql>

    <select id="selectHashUserNoticeList" parameterType="HashUserNotice" resultMap="HashUserNoticeResult">
        <include refid="selectHashUserNoticeVo"/>
        <where>
            <if test="title != null  and title != ''">and title = #{title}</if>
            <if test="isOpen != null ">and open = #{isOpen}</if>
            <if test="isPop != null ">and is_pop = #{isPop}</if>
            <if test="weight != null ">and weight = #{weight}</if>
            <if test="createTime != null ">and create_time >= #{createTime}</if>
        </where>
    </select>

    <select id="selectHashUserNoticeById" parameterType="String" resultMap="HashUserNoticeResult">
        <include refid="selectHashUserNoticeVo"/>
        where id = #{id}
    </select>

    <insert id="insertHashUserNotice" parameterType="HashUserNotice">
        insert into t_user_notice
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="title != null">title,</if>
            <if test="content != null">content,</if>
            <if test="isOpen != null">open,</if>
            <if test="finishTime != null">finish_time,</if>
            <if test="createTime != null">create_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="weight != null">weight,</if>
            <if test="isPop != null">is_pop,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="title != null">#{title},</if>
            <if test="content != null">#{content},</if>
            <if test="isOpen != null">#{isOpen},</if>
            <if test="finishTime != null">#{finishTime},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="weight != null">#{weight},</if>
            <if test="isPop != null">#{isPop},</if>
        </trim>
    </insert>

    <update id="updateHashUserNotice" parameterType="HashUserNotice">
        update t_user_notice
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null">title = #{title},</if>
            <if test="content != null">content = #{content},</if>
            <if test="isOpen != null">open = #{isOpen},</if>
            <if test="finishTime != null">finish_time = #{finishTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="isPop != null">is_pop = #{isPop},</if>
            <if test="weight != null">weight = #{weight},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteHashUserNoticeById" parameterType="String">
        delete
        from t_user_notice
        where id = #{id}
    </delete>

    <delete id="deleteHashUserNoticeByIds" parameterType="String">
        delete from t_user_notice where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>