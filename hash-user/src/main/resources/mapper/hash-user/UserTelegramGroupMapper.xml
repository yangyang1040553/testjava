<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.hashuser.mapper.UserTelegramGroupMapper">

    <resultMap type="UserTelegramGroup" id="UserTelegramGroupResult">
        <result property="groupId" column="group_id"/>
        <result property="createTgId" column="create_tg_id"/>
        <result property="name" column="name"/>
        <result property="tgUrl" column="tg_url"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectUserTelegramGroupVo">
        select group_id, create_tg_id, name, tg_url, create_time
        from t_user_telegram_group
    </sql>

    <select id="selectUserTelegramGroupList" parameterType="UserTelegramGroup" resultMap="UserTelegramGroupResult">
        <include refid="selectUserTelegramGroupVo"/>
        <where>
            <if test="groupId != null  and groupId != ''">and group_id = #{groupId}</if>
            <if test="createTgId != null  and createTgId != ''">and create_tg_id = #{createTgId}</if>
            <if test="name != null  and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="tgUrl != null  and tgUrl != ''">and tg_url = #{tgUrl}</if>
            <if test="createTime != null">and DATE_FORMAT(a.create_time,'%Y-%m-%d') =
                DATE_FORMAT(#{createTime},'%Y-%m-%d')
            </if>
        </where>
    </select>

    <select id="selectUserTelegramGroupByGroupId" parameterType="String" resultMap="UserTelegramGroupResult">
        <include refid="selectUserTelegramGroupVo"/>
        where group_id = #{groupId}
    </select>

    <insert id="insertUserTelegramGroup" parameterType="UserTelegramGroup">
        insert into t_user_telegram_group
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="groupId != null">group_id,</if>
            <if test="createTgId != null">create_tg_id,</if>
            <if test="name != null">name,</if>
            <if test="tgUrl != null">tg_url,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="groupId != null">#{groupId},</if>
            <if test="createTgId != null">#{createTgId},</if>
            <if test="name != null">#{name},</if>
            <if test="tgUrl != null">#{tgUrl},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <update id="updateUserTelegramGroup" parameterType="UserTelegramGroup">
        update t_user_telegram_group
        <trim prefix="SET" suffixOverrides=",">
            <if test="createTgId != null">create_tg_id = #{createTgId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="tgUrl != null">tg_url = #{tgUrl},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where group_id = #{groupId}
    </update>

    <delete id="deleteUserTelegramGroupByGroupId" parameterType="String">
        delete
        from t_user_telegram_group
        where group_id = #{groupId}
    </delete>

    <delete id="deleteUserTelegramGroupByGroupIds" parameterType="String">
        delete from t_user_telegram_group where group_id in
        <foreach item="groupId" collection="array" open="(" separator="," close=")">
            #{groupId}
        </foreach>
    </delete>
</mapper>